<!DOCTYPE html>
<html>
  <head>
    <title>Chreative Gaming</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Thredded stuff -->
    <!-- <title>Thredded | <%#= yield :thredded_page_title %></title> -->
    <%= stylesheet_link_tag 'thredded', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tag %>
    <%= csp_meta_tag if Thredded.rails_supports_csp_nonce? %>
    <%= javascript_include_tag 'thredded',
                               async: !Rails.application.config.assets.debug,
                               defer: true,
                               'data-turbolinks-track': 'reload' %>
    <%== Gravatar.prefetch_dns %>
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"> -->

  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>

    <% if request.path == '/' %>
        <%= yield %>
    <% else %>
      <!-- <div class="container"> -->
        <%= yield %>
      <!-- </div> -->
    <% end %>

    <%= render 'shared/footer' %>

    <%= javascript_pack_tag 'custom', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'thredded_custom', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
