<section class="background-curves">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-9 col-lg-6">
        <div class="tabs d-flex">
          <p class="tab-active">Edit <%= resource_name.to_s.humanize %></p>
        </div>
        <div class="margin-top">

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|%>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%#= f.input :title, label: false, placeholder: 'Title', input_html: { class: 'input-rounded' } %>

              <%= f.input :email,
                          label: false,
                          placeholder: 'email',
                          required: true,
                          autofocus: true,
                          input_html: { class: 'input-rounded' } %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
              <%= f.input :password,
                          label: false,
                          placeholder: 'new password',
                          hint: "leave empty to keep your current password",
                          required: false,
                          input_html: { autocomplete: "new-password" },
                          input_html: { class: 'input-rounded' } %>
              <%= f.input :password_confirmation,
                          label: false,
                          placeholder: 'confirm new password',
                          required: false,
                          input_html: { autocomplete: "new-password" },
                          input_html: { class: 'input-rounded' } %>
              <%= f.input :current_password,
                          label: false,
                          placeholder: 'current password',
                          hint: "needed to confirm changes",
                          required: true,
                          input_html: { autocomplete: "current-password" },
                          input_html: { class: 'input-rounded' } %>
            </div>
            <div class="d-flex justify-content-between align-items-center margin-top">
              <%= link_to "Back", :back %>
              <div class="form-actions">
                <%= f.button :submit, "Update", class: "btn-orange"  %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>



