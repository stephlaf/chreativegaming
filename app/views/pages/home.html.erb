<section class="banner">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-12 col-lg-6 text-center">
        <h1>Welcome to <br><span class="title">ChreativeGaming</span></h1>
        <p><strong class='home-page-cta'>Discuss</strong> anything gaming related 🗣</p>
        <p><strong class='home-page-cta'>Play</strong> the minigame of the month 🏆</p>
        <p><strong class='home-page-cta'>Earn</strong> money when you beat it 💰</p>
        <p class='home-page-cta-2'>3 winners still available this month</p>
        <p class='home-page-cta-2'>To be the next winner, Join Now!</p>

        <% if current_user %>
          <button
            class="btn-orange margin-top"
            data-controller="scroll-to-news"
            data-action="click->scroll-to-news#scroll"
          >See the latest news</button>
        <% else %>
          <div class="d-flex margin-top align-items-center justify-content-center">
            <%= link_to new_user_session_path do %>
              <button class="btn-orange">Join the community</button>
            <% end %>
            <i class="fas fa-info-circle mx-3"
               id="info-popover"
               tabindex="0"
               data-controller="why-join-popover"
               data-bs-toggle="popover"
               data-bs-trigger="focus"
               data-bs-placement="right"
               data-html="true",
               data-content='<ul>
                               <li> ‣ Discuss with and meet like-minded gamers </li>
                               <li> ‣ Stay up to date with the biggest news in gaming </li>
                               <li> ‣ Earn money playing games every month! </li>
                               <%# <li> ‣ Not Convinced? Watch this! <li> %>
                             </ul>',
               title="Why you should join us"></i>
          </div>
        <% end %>
      </div>
      <div class="col-12 col-lg-6 home-page-pic">
        <% if @seo_template && @seo_template.home_page_picture.attached? %>
          <%= cl_image_tag @seo_template.home_page_picture.key, alt: "" %>
        <% else %>
          <%= image_tag "platformMeteorImage.jpeg", alt: "Meteor" %>
        <% end %>

        <!-- Change Home Page Picture -->
        <% if current_user && current_user.master %>
          <%= link_to edit_picture_path do %>
            <i class="fas fa-camera-retro home-page-edit"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>
<%= render 'home_news' %>
