<%= simple_form_for(@blog_post) do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :blog_image %>
  <% if current_user.master %>
    <%= f.input :status,
      as: :select,
      collection: BlogPost.statuses.keys.map!(&:capitalize),
      # include_blank: false,
      selected: f.object.status.capitalize,
      label: 'Post Status' %>

  <% end %>
  <%= f.submit %>
<% end %>
