<%= simple_form_for(@game) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.text_field :category, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price_cents, class: 'form-control' %>
  </div>
  <ul>
    <li>Bronze: <span id="bronze"><%= @game.price_bronze_cents %></span></li>
    <li>Silver: <span id="silver"><%= @game.price_silver_cents %></span></li>
    <li>Gold: <span id="gold"><%= @game.price_gold_cents %></span></li>
    <li>Platinum: <span id="platinum"><%= @game.price_platinum_cents %></span></li>
  </ul>

  <!-- <div class="form-group"> -->
    <%#= f.label :status %>
    <%#= f.input :available, collection: [true, false], class: 'form-control' %>
  <!-- </div> -->

  <%= f.input :thumbnail, as: :file %>
  <%= f.input :banner, as: :file %>
  <%= f.input :game_file, as: :file %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

