<section class="background-curves" id="">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-9">
          <% unless @games.empty? %>
            <h1>Our Collection of Awesome Games</h1>
            <div class="news-section margin-top">
              <% @games.each do |game| %>
                <%= render 'game_card', game: game %>
              <% end %>
            </div>

          <% else %>
            <p>Hmm... must be a slow games day. Check back again soon! </p>
          <% end %>
      </div>
    </div>
  </div>
</section>
