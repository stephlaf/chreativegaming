<h1>Our Collection of Awesome Games</h1>
<div class="container">
  <div class="row">
    <% @games.order(updated_at: :desc).each do |game| %>
     <%= game.name %>
    <% end %>
  </div>
</div>

<section class="background-curves" id="">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-9">

          <% unless @games.empty? %>
            <p>All the gaming news we're talking about right now.</p>
            <div class="news-section margin-top">
              <% @games.each do |game| %>
                <div class="margin-bottom">
                  <div class="card-container">
                    <%= link_to "#" do %>
                      <div class="card-long">
                        <div class="game-image-container">
                          <% if game.thumbnail.attached? %>
                            <%= cl_image_tag game.thumbnail.key, width: 355, height: 200, crop: :fill, class: 'blog-image', alt: 'Game Thumbnail' %>
                          <% else %>
                           <%= cl_image_tag current_user.avatar.key, width: 200, height: 200, gravity: :face, crop: :thumb, class: 'avatar-image', alt: 'User Avatar' %>
                          <% end %>
                        </div>
                        <div class="card-text">
                          <h3><%= game.description.truncate(100) %></h3>
                          <div class="secondary-text d-flex">
                            <p><i class="far fa-clock"></i><%= game.created_at.strftime("%b %d, %Y") %></p>
                            <p><i class="far fa-heart"></i><%#=game.gamelikes.count%></p>
                          </div>
                        </div>
                        <p class="card-tag news-tag">news</p>
                      </div>
                    <% end %>
                  </div>

                </div>
              <% end %>
            </div>

          <% else %>
            <p>Hmm... must be a slow games day. Check back again soon! </p>
          <% end %>

      </div>
    </div>


  </div>
</section>
